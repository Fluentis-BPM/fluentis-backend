{
"$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
"tasks": [
    {
    "name": "dotnet-format",
    "group": "pre-commit",
    "command": "dotnet",
    "args": [
        "dotnet",
        "--include",
        "${staged}"
    ],
    "include": [
        "**/*.cs",
        "**/*.vb"
    ]
    },
    {
    "name": "commit-message-linter",
    "group": "commit-msg",
    "command": "dotnet",
    "args": [
        "husky",
        "exec",
        ".husky/commit-lint.csx",
        "--args",
        "${args}"
    ]
    }
]
}
